<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

    <display-name>Web-Application "Cables"</display-name>

    <servlet>
      <servlet-name>TestServlet</servlet-name>
      <servlet-class>org.itstep.vinokurov.web.TestServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    
	<servlet>
      <servlet-name>WorkspaceServlet</servlet-name>
      <servlet-class>org.itstep.vinokurov.web.WorkspaceServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>WorkspaceServlet</servlet-name>
        <url-pattern>/workspace.html</url-pattern>
    </servlet-mapping>
    
	<servlet>
      <servlet-name>TnlaServlet</servlet-name>
      <servlet-class>org.itstep.vinokurov.web.TnlaServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>TnlaServlet</servlet-name>
        <url-pattern>/workspace/tnla.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>TnlaDelegateServlet</servlet-name>
      <servlet-class>org.itstep.vinokurov.web.TnlaDelegateServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>TnlaDelegateServlet</servlet-name>
        <url-pattern>/workspace/tnla/delegate.html</url-pattern>
    </servlet-mapping>
        
    <servlet>
      <servlet-name>TnlaAddServlet</servlet-name>
      <servlet-class>org.itstep.vinokurov.web.TnlaAddServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>TnlaAddServlet</servlet-name>
        <url-pattern>/workspace/tnla/add.html</url-pattern>
    </servlet-mapping>
            
    <servlet>
      <servlet-name>TnlaUpdateServlet</servlet-name>
      <servlet-class>org.itstep.vinokurov.web.TnlaUpdateServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>TnlaUpdateServlet</servlet-name>
        <url-pattern>/workspace/tnla/update.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>TnlaSaveServlet</servlet-name>
      <servlet-class>org.itstep.vinokurov.web.TnlaSaveServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>TnlaSaveServlet</servlet-name>
        <url-pattern>/workspace/tnla/save.html</url-pattern>
    </servlet-mapping>
    
    <filter>
    	<filter-name>EncodingFilterServlet</filter-name>
    	<filter-class>org.itstep.vinokurov.web.EncodingFilterServlet</filter-class>
    </filter>
	
	<filter-mapping>
		<filter-name>EncodingFilterServlet</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>org.itstep.vinokurov.web.ApplicationInitializer</listener-class>
	</listener>
	
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
 </web-app>
